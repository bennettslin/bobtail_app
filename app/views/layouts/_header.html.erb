<header>
  <div id="admin_logged">
    <% if current_admin.present? %>
      <p>Howdy, <%= current_admin.name %>! |
        <%= link_to "Admins page", admins_path %> |
        <%= link_to "Logout", logout_path %></p>
    <% elsif !Rails.env.production? %>
      <p><%= link_to "Register", new_admin_path %> |
      <%= link_to "Login", login_path %></p>
    <% end %>
  </div>

  <div id="title_logo">
    <%= link_to image_tag("bobtail_b.gif"), root_path %>
  </div>
  <ul class="menu_buttons">
    <li>
      <% if @news_page %>
        <%= image_tag("news_r.gif") %>
      <% else %>
        <%= link_to image_tag("news_b.gif"), news_items_path %>
      <% end %>
    </li>
    <li>
      <% if @audio_page %>
        <%= image_tag("audio_r.gif") %>
      <% else %>
        <%= link_to image_tag("audio_b.gif"), audio_path %>
      <% end %>
