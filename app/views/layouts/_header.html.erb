    <li>
      <% if @lyrics_page %>
        <%= image_tag("lyrics_r.gif") %>
      <% else %>
        <%= link_to image_tag("lyrics_b.gif"), lyrics_path %>
      <% end %>
    </li>
    <li>
      <% if @scores_page %>
        <%= image_tag("scores_r.gif") %>
      <% else %>
        <%= link_to image_tag("scores_b.gif"), scores_path %>
      <% end %>
    </li>
    <li>
      <% if @method_page %>
        <%= image_tag("method_r.gif") %>
      <% else %>
        <%= link_to image_tag("method_b.gif"), method_path %>
      <% end %>
    </li>
    <li>
      <% if @misc_page %>
        <%= image_tag("misc_r.gif") %>
