<% if @news_item.errors.any? %>
  <ul id="errors">
    <% @news_item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @news_item do |f| %>
  <div>
    <%= f.label :heading %>
    <span class="small_text">(html-friendly)</span><br>
    <%= f.text_field :heading, class: "full-width" %>
  </div>
  <div>
    <%= f.label :entry %>
    <span class="small_text">(html-friendly)</span><br>
    <%= f.text_area :entry, class: "full-width" %>
  </div>
  <% if params[:preview] %>
    Preview:
    <h3><%= @news_item.heading.html_safe %></h3>
    <div id="preview_text"><%= @news_item.entry.html_safe %></div>
  <% end %>
  <%= f.submit "Cancel", name: "cancel" %>
  <%= f.submit "Preview", name: "preview" %>
  <%= f.submit %>
<% end %>
