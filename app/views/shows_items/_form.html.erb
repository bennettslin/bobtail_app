<% if @shows_item.errors.any? %>
  <ul id="errors">
    <% @shows_item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @shows_item do |f| %>
  <div>
    <%= f.label :name, "Venue name" %><br>
    <%= f.text_field :name, class: "full-width" %>
  </div>
  <div>
    <%= f.label :webpage, "Venue webpage" %>
    <span class="small_text">(optional)</span><br>
    <%= f.text_field :webpage, class: "full-width" %>
  </div>
  <div>
    <%= f.label :city %><br>
    <%= f.text_field :city, class: "part-width" %>
  </div>
  <div>
    <%= f.label :state, "State or Country" %><br>
    <%= f.text_field :state, class: "part-width" %>
  </div>
  <div>
    <%= f.label :date, "Date and Time" %><br>
    <%= f.datetime_select :date, default: Time.now.at_end_of_day - 2.hours,
      ampm: true, minute_step: 15 %>
  </div>
  <div>
    <%= f.label :extra, "Any extra info" %>
    <span class="small_text">(optional, please keep it minimal)</span><br>
    <%= f.text_field :extra, class: "full-width" %>
  </div>
  <%= f.submit "Cancel", name: "cancel" %>
  <%= f.submit %>
<% end %>
